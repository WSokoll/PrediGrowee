{% extends "base.jinja" %}

{% block content %}

  <!-- Hero section -->
  <div class="px-4 py-5 text-center" id="about-project-section">
    <h1 class="display-5 fw-bold">What is PrediGrowee app?</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">
        The secure educational web application to assess facial growth based on cephalometric images
      </p>
    </div>
  </div>

  <!-- Mode selection section -->
  <div class="container">
    <div class="card text-center" id="mode-selection-section">
      <div class="card-header" id="mode-selection-card-header">
        <h4>Mode selection</h4>
      </div>
      <div class="card-body" id="mode-selection-card-body">
        <div id="carouselCaptions" class="carousel slide" data-bs-ride="false">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <h5>Classic Mode</h5>
              <p>Some representative placeholder content for the classic mode.</p>
              <div class="d-grid gap-2 col-4 mx-auto">
                <button type="button" class="btn btn-primary">Try it</button>
              </div>
            </div>
            <div class="carousel-item">
              <h5>Educational Mode</h5>
              <p>Some representative placeholder content for the educational mode.</p>
              <div class="d-grid gap-2 col-4 mx-auto">
                <button type="button" class="btn btn-primary">Try it</button>
              </div>
            </div>
            <div class="carousel-item">
              <h5>Limited Time Mode</h5>
              <p>Some representative placeholder content for the limited time mode.</p>
              <div class="d-grid gap-2 col-4 mx-auto">
                <button type="button" class="btn btn-primary">Try it</button>
              </div>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact section -->

{% endblock %}
