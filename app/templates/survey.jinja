{% extends 'base.jinja' %}
{% from "_macros.html" import render_field_with_errors %}

{% block content %}

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="card">
          <div class="card-body">
              <h5 class="card-title mb-4 text-center">Survey</h5>
              <p class="text-center">Some information about the survey</p>

              <form method="POST" action="{{ url_for('survey.get_post') }}">
                {{ form.csrf_token }}

                {{ form.gender.label(class="mb-1") }}:
                {{ render_field_with_errors(form.gender, class="form-control mb-3", autofocus=true) }}

                {{ form.age.label(class="mb-1") }}:
                {{ render_field_with_errors(form.age, class="form-control mb-3", placeholder='Age') }}

                {{ form.vision_defect.label(class="mb-1") }}:
                {{ render_field_with_errors(form.vision_defect, class="form-control mb-3") }}

                {{ form.education.label(class="mb-1") }}:
                {{ render_field_with_errors(form.education, class="form-control mb-3") }}

{#                {{ render_field_with_errors(form.education_other, class="form-control mb-3", placeholder='Education') }}#}

                {{ form.experience.label(class="mb-1") }}:
                {{ render_field_with_errors(form.experience, class="form-control mb-3") }}

                <div class="mb-3 text-center">
                  <button type="submit" class="btn btn-primary">Wy≈õlij</button>
                </div>
              </form>

          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}